# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overridden
# Prefer a user phpenv over a system wide install
if [ -s "${HOME}/.phpenv/bin" ]; then
    phpenv_root="${HOME}/.phpenv"
elif [ -s "<%= node['phpenv']['root_path'] %>" ]; then
    phpenv_root="<%= node['phpenv']['root_path'] %>"
    export PHPENV_ROOT="$phpenv_root"
fi

if [ -n "$phpenv_root" ]; then
    export PATH="${phpenv_root}/bin:$PATH"
    eval "$(phpenv init -)"
fi
